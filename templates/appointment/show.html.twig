{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h1 class="mb-0">Appointment Details</h1>
            </div>
            <div class="card-body">
                <div class="row mt-4">
                    <div class="col-md-6">
                        <p><strong>Client:</strong> {{ appointment.client.name }}</p>
                        <p><strong>Patient:</strong> {{ appointment.patient.name }}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Date:</strong> {{ appointment.date|date('Y-m-d') }}</p>
                        <p><strong>Registration Date:</strong> {{ appointment.registrationDate|date('Y-m-d') }}</p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <p><strong>Symptom Date:</strong> {{ appointment.symptomDate|date('Y-m-d') }}</p>
                        <p><strong>Status:</strong> {{ appointment.status }}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Diagnosis:</strong> {{ appointment.diagnosis }}</p>
                        <p><strong>Services:</strong> {{ appointment.services }}</p>
                        <p><strong>End Result:</strong> {{ appointment.endResult }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0">Examinations</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-secondary">
                    <tr>
                        <th scope="col">Examination Name</th>
                        <th scope="col">Date</th>
                        <th scope="col">Result</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for examination in appointment.examinations %}
                        <tr>
                            <td>{{ examination.examination.examinationName }}</td>
                            <td>{{ examination.date|date('Y-m-d') }}</td>
                            <td>{{ examination.result }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center text-muted">No examinations found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">Drugs</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-secondary">
                    <tr>
                        <th scope="col">Drug Name</th>
                        <th scope="col">Amount</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for drug in appointment.drugs %}
                        <tr>
                            <td>{{ drug.drug.name }}</td>
                            <td>{{ drug.amount }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-center text-muted">No drugs found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_appointment_index') }}" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>
    </div>
{% endblock %}
