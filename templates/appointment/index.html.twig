
{% extends 'base.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block body %}
    <h1>Appointment index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>RegistrationDate</th>
            <th>SymptomDate</th>
            <th>Status</th>
            <th>Diagnosis</th>
            <th>Services</th>
            <th>EndResult</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.id }}</td>
                <td>{{ appointment.date ? appointment.date|date('Y-m-d') : '' }}</td>
                <td>{{ appointment.registrationDate ? appointment.registrationDate|date('Y-m-d') : '' }}</td>
                <td>{{ appointment.symptomDate ? appointment.symptomDate|date('Y-m-d') : '' }}</td>
                <td>{{ appointment.status }}</td>
                <td>{{ appointment.diagnosis }}</td>
                <td>{{ appointment.services }}</td>
                <td>{{ appointment.endResult }}</td>
                <td>
                    <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}">show</a>
                    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_appointment_new') }}">Create new</a>
{% endblock %}
