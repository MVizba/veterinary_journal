    </div>
    <div class="col-md-6">
        {{ form_label(form.patient) }}
        {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        {{ form_label(form.date) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_label(form.registrationDate) }}
        {{ form_widget(form.registrationDate, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        {{ form_label(form.symptomDate) }}
        {{ form_widget(form.symptomDate, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_label(form.status) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
    </div>
