{% extends 'base.html.twig' %}

{% block title %}Client Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Client Details</h1>

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_client_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
{% endblock %}
