{% if is_granted('ROLE_ADMIN') %}
    <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item? You also delete associated patients');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
{% endif %}
