{% extends 'base.html.twig' %}

{% block title %}Client Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Client List</h1>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.name }}</td>
                    <td>{{ client.lastName }}</td>
                    <td>{{ client.address }}</td>
                    <td>{{ client.phone }}</td>
                    <td>{{ client.email }}</td>
                    <td>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_client_new') }}" class="btn btn-success">Create New Client</a>
    </div>
{% endblock %}
